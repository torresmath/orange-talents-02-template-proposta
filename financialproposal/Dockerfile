FROM openjdk:11
MAINTAINER Matheus Torres
COPY /target/*.jar /var/www/app.jar
WORKDIR /var/www
ENTRYPOINT java -jar app.jar
EXPOSE 8080
ENV APP_NAME=proposals-prod
ENV SERVER_PORT=8080
ENV DB_USERNAME=root
ENV DB_PASSWORD=ajudazupper
ENV DB_HOST=mysql
ENV DB_PORT=3306
ENV KEYCLOAK_SUPPLIER=keycloak
ENV KEYCLOAK_PORT=8080
ENV ACCOUNT_API=contas
ENV ANALYSIS_API=analise
ENV ENV_NAME=prod
ENV JAEGER_ENABLED=1
ENV JAEGER_ENDPOINT=http://jaeger:14268/api/traces
ENV JAEGER_SAMPLES=1
ENV JAEGER_PORT=jaeger